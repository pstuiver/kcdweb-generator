---
import Layout from "../../layouts/Layout.astro";
const build = import.meta.env.PROD;
const hrefApple = import.meta.env.PROD
  ? "../apple-touch-icon.png"
  : "/apple-touch-icon.png";
const hrefSafari = import.meta.env.PROD
  ? "../safari-pinned-tab.svg"
  : "/safari-pinned-tab.svg";
const titleBack = " - Blog";
const headClass = "views-head gray-on-blue";
const headTitle = "kidzcandurban.blogspot.com";
const mainClass = "views-content gray-on-blue";
---

<Layout titleBack={titleBack} hrefApple={hrefApple} hrefSafari={hrefSafari}>
  <div style="display: contents">
    <div class="views-container">
      <header class={headClass}>
        <nav class="w-full">
          <div class="w-full flex items-center justify-between">
            <div class="flex items-center">
              <a href="javascript:history.back()">
                <svg viewBox="0 0 48 48" class="views-head-icon">
                  <title>Back arrow icon</title>
                  <path d="M13,24 23,13 23,20 34,20 34,28 23,28 23,35Z"></path>
                </svg>
              </a>
              <span class="views-head-back" aria-hidden="true">back</span>
            </div>

            <h1 class="views-head-text">{headTitle}</h1>
            <div class="views-head-dummy" aria-hidden="true">&nbsp;</div>
          </div>
        </nav>
      </header>
      <main>
        <div
          class="flex flex-col items-center relative w-full h-screen m-0 p-0">
          <div
            class="absolute origin-top width-full h-screen scale-[0.43] xs:iframescale-xs sm:iframescale-sm md:iframescale-md -mt-16 xs:-iframemt-xs sm:-iframemt-sm md:-iframemt-md svelte-19c54l5">
            <iframe
              title="kidzcandurban blog"
              width="780px"
              height="250%"
              class=""
              src="https://kidzcandurban.blogspot.com"></iframe>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>

  <style>
    @media (min-width: 480px) {
      .xs\:iframescale-xs {
        --tw-scale-x: 0.6;
        --tw-scale-y: 0.6;
        transform: var(--tw-transform);
      }
      .xs\:-iframemt-xs {
        margin-top: -7rem;
      }
    }
    @media (min-width: 768px) {
      .sm\:iframescale-sm {
        --tw-scale-x: 0.92;
        --tw-scale-y: 0.92;
        transform: var(--tw-transform);
      }
      .sm\:-iframemt-sm {
        margin-top: -12rem;
      }
    }
    @media (min-width: 976px) {
      .md\:iframescale-md {
        --tw-scale-x: 1.1;
        --tw-scale-y: 1.1;
        transform: var(--tw-transform);
      }
      .md\:-iframemt-md {
        margin-top: -14rem;
      }
    }
  </style>

